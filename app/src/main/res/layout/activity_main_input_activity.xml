<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <Button
                    android:id="@+id/single_exercise"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:textAllCaps="false"
                    android:textSize="12dp"
                    android:text="Insert single Exercise">

                </Button>

                <Button
                    android:id="@+id/single_sleep"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:textAllCaps="false"
                    android:textSize="12dp"
                    android:text="Insert single Sleep">

                </Button>
                <Button
                    android:id="@+id/multiple_sleep"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:textAllCaps="false"
                    android:textSize="12dp"
                    android:text="Insert multiple Sleep">

                </Button>
                <Button
                    android:id="@+id/single_bp"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:textAllCaps="false"
                    android:textSize="12dp"
                    android:text="Insert single Blood pressure">

                </Button>
                <Button
                    android:id="@+id/multiple_bp"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:textAllCaps="false"
                    android:textSize="12dp"
                    android:text="Insert multiple Blood pressure">

                </Button>
                <Button
                    android:id="@+id/single_bg"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:textAllCaps="false"
                    android:textSize="12dp"
                    android:text="Insert single Blood glucose">

                </Button>
                <Button
                    android:id="@+id/multiple_bg"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:textAllCaps="false"
                    android:textSize="12dp"
                    android:text="Insert multiple Blood glucose">

                </Button>
                <Button
                    android:id="@+id/single_hr"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:textAllCaps="false"
                    android:textSize="12dp"
                    android:text="Insert single heart rate">
                </Button>

                <Button
                    android:id="@+id/single_spo2"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:textAllCaps="false"
                    android:textSize="12dp"
                    android:text="Insert single blood oxygen">

                </Button>
                <Button
                    android:id="@+id/multiple_spo2"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:textAllCaps="false"
                    android:textSize="12dp"
                    android:text="Insert multiple oxygen">

                </Button>
                <Button
                    android:id="@+id/single_weight"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:textAllCaps="false"
                    android:textSize="12dp"
                    android:text="Insert single Weight">

                </Button>
                <Button
                    android:id="@+id/multiple_weight"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:textAllCaps="false"
                    android:textSize="12dp"
                    android:text="Insert multiple Weight">

                </Button>
                <Button
                    android:id="@+id/single_hydration"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:textAllCaps="false"
                    android:textSize="12dp"
                    android:text="Insert single water">

                </Button>
                <Button
                    android:id="@+id/multiple_hydration"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:textAllCaps="false"
                    android:textSize="12dp"
                    android:text="Insert multiple water">

                </Button>
                <Button
                    android:id="@+id/single_nutrition"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:textAllCaps="false"
                    android:textSize="12dp"
                    android:text="Insert Singe Nutrition">

                </Button>
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
